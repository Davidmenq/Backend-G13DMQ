  "servers": [
    {
      "url": "http://127.0.0.1:5000"
    },
    {
      "url": "http://localhost:5000"
    },
    {
      "url": "https://directorio-mascotas-eduardo-icwb.onrender.com"
    }
  ],
  "tags": [
    {
      "name": "usuarios",
      "description": "Endpoints para el manejo de los usuarios",
      "externalDocs": {
        "description": "Una documentacion adicional",
        "url": "https://www.google.com"
      }
    }
  ],
  "paths": {
    "/usuarios": {
      "get": {
        "tags": [
          "usuarios"
        ],
        "summary": "Listar todos los usuarios",
        "description": "Este endpoint sirve para devolver a todos  los usuarios registrados en mi API",
        "operationId": "getUsuarios",
        "responses": {
          "200": {
            "description": "Exitoso",
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "content": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Usuario"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": "-usuarios",
        "requestBody": {
          "description": "Informacion para crear el nuevo usuario",
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "nombre": {
                    "type": "string",
                    "example": "David"
                  },
                  "apellido": {
                    "type": "string",
                    "example": "Mendoza"
                  },
                  "correo": {
                    "type": "string",
                    "example": "email"
                  },
                  "telefono": {
                    "type": "string",
                    "example": 999999999
                  },
                  "linkedinUrl": {
                    "type": "string",
                    "format": "url"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Creacion correcta del usuario",
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "usuario creado exitosamente"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Si la informacion es incorrecta o el usuario ya existe"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Usuario": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "example": 1
          },
          "nombre": {
            "type": "string",
            "example": "David"
          },
          "apellido": {
            "type": "string",
            "example": "Mendoza"
          },
          "correo": {
            "type": "string",
            "example": "email"
          },
          "telefono": {
            "type": "string",
            "example": 999999999
          },
          "linkedinUrl": {
            "type": "string",
            "format": "url"
          }
        }
      }
    }
  }
}